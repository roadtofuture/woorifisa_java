package com.example.demo.phone;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

//메타 정보를 작성할 설정 파일
@Configuration
public class PhoneConfig {
	// bean 구성 : 비즈니스 로직을 가진 객체
	@Bean
	public Iphone iphone() {
		return new Iphone(); //iphone타입의 객체를 만드는중 
		
	}
	@Bean
	public GalaxyFold galaxy() {
		return new GalaxyFold();
	}
	
	@Bean
	public PhoneUser phoneUser() {
		PhoneUser user = new PhoneUser(galaxy()); //의존성을 주입 
		return user;
	}
}
